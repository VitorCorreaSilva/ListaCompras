<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ReceitaActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/receita_imagem"
            android:src="@drawable/hamburguer"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_below="@+id/receita_imagem"
            android:id="@+id/receita_descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:text="Descricao"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/txt1"
            android:layout_below="@+id/receita_descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:text="Ingredientes"
            android:textStyle="bold"
            android:textSize="19sp"/>

        <ListView
            android:id="@+id/receita_ingredientes"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_below="@+id/txt1">
        </ListView>

        <TextView
            android:id="@+id/txt2"
            android:layout_below="@+id/receita_ingredientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:text="Mode de Preparo"
            android:textStyle="bold"
            android:textSize="19sp" />

        <ListView
            android:id="@+id/receita_passos"
            android:layout_width="match_parent"
            android:layout_height="64dp">
        </ListView>
        </LinearLayout>
</ScrollView>